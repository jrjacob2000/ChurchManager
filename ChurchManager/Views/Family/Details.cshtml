                        </li>
                    </ul>
                </div>
                <!-- /.tab-pane -->
            </div>
            <!-- /.tab-pane -->
        </div>
        <!-- /.tab-content -->
    </div>
    <!-- /.nav-tabs-custom -->
</div>
<!-- /.col -->

@section Scripts {
    <!-- Select2 -->
    <script src="~/AdminLTE_2_4_2/bower_components/select2/dist/js/select2.full.min.js"></script>
    <script type="text/javascript">

        $(function () {
            //$('#tblFamily').DataTable();
            $('.select2').select2({
            });

            $('#btnConfirmdelete').on('click', function () {
                alert('');
            })

            $('#add').on('click', function () {               
                if ($('#SectedPersonIdToAdd').val() != '') {
                    $('.loader').show();
                    $.post('@Url.Action("AddToFamily")', $('form').serializeModel(), function (html) {
                        $('.loader').hide();
                        $('#SectedPersonIdToAdd').val('').trigger('change')
                        $('#container').empty();
                        $('#container').html(html);
                    }).fail(function (response) {
                        alert('Error: ' + response.responseText);
                    });
                }
                else {
                    alert("Please select person to search")
                }

            });
        });

        function RemoveFromFamily(perId, famId) {
            
            //alert('/People/RemoveFromGroup/' + grpId + '?parentId=' + perId);
            jQuery.noConflict();
            // Delete any existing modal before spawning another.
            $('#Ajax-Modal').remove();

            $.ajax({
                url: '/Family/RemoveFromFamily/' + perId + '?parentId=' + famId,
                type: 'get',
                cache: false,
                //data: JSON.stringify({ personId: perId, groupId: grpId }),//{ postId: $(e.target).data('id') },
                success: function (data) {

                    //$(data).modal('show')
                    $(data).modal(
                        {
                            backdrop: 'static',
                            keyboard: false,
                        }
                    );
                },
                error: function (data) {
                    alert(data.responseText);
                }
            });



        }

        $.fn.serializeModel = function () {
            var model = {};
            $(this).serializeArray().map(function (item) {
                model[item.name] = item.value;
            });
            return model;
        };
    </script>
}

