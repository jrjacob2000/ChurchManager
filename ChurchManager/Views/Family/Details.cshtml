@model ChurchManager.Models.FamilyView

@{
    ViewBag.Title = "Family";
}

<style>
    hr {
        margin-top: 5px !important;
        margin-bottom: 5px !important;
    }

    .select2 {
        max-width: 268px !important;
        min-width: 200px !important;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <div class="pull-right"> @Html.ActionLink("View All Family", "Index", null, new { @title = "Person list" })</div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
