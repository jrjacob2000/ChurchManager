                <img class="profile-user-img img-responsive img-circle" src="~/Images/blankProfile.jpg" alt="User profile picture">
                <h3 class="profile-username text-center">Family: @Html.DisplayFor(model => model.Name)</h3>
                @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary btn-block", @title = "Edit" })
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
        <!-- About Me Box -->
        <div class="box box-primary">
            @*<div class="box-header with-border">
                    <h3 class="box-title">About Me</h3>
                </div>*@
            <!-- /.box-header -->
            <div class="box-body">
                <strong><i class="fa fa-map-marker margin-r-5"></i> Address</strong>
                <p class="text-muted">@Html.DisplayFor(model => model.Address1)</p>
                <hr>
                <strong><i class="fa fa-calendar margin-r-5"></i> Wedding date</strong>
                <p class="text-muted">@Html.DisplayFor(model => model.WeddingDate)</p>
                <hr>
                <strong><i class="fa fa-phone margin-r-5"></i> Home phone</strong>
                <p class="text-muted">@Html.DisplayFor(model => model.HomePhone)</p>
                <hr>
                <strong><i class="fa fa-envelope margin-r-5"></i> Email</strong>
                <p class="text-muted">@Html.DisplayFor(model => model.Email)</p>
                <hr>

