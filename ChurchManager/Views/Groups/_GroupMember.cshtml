@model ChurchManager.Models.GroupView


<div class="col-md-12">
    <table id="tblMembers" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>

                <th>Action</th>

            </tr>
        </thead>
        @for (var i = 0; i < Model.Members.Count; i++)
        {
            <tr>
                <td style="width:80%">
                    @Html.HiddenFor(m => Model.Members[i].Id)
                    @Html.HiddenFor(m => Model.Members[i].FirstName)
                    @Html.HiddenFor(m => Model.Members[i].LastName)
                    @Html.DisplayFor(m => Model.Members[i].Name)
                </td>
                <td style="width:20%">
                    @Html.HiddenFor(m => Model.Members[i].IsDeleted)
                    <a href="#" onclick="Remove(this)" class="btn btn-danger fa fa-trash delete-country" title="Remove"></a>
                </td>
            </tr>
        }
    </table>
</div>



@Html.Script(
        @<script type="text/javascript">
             $(document).ready(function () {
                 $('#tblMembers').DataTable();
             });
        </script>
        )


