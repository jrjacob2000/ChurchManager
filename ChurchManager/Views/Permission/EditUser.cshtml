@model ChurchManager.Models.UserViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title">User Info</h3>
        <div class="pull-right">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">    
        <div class="row">
            <div class="col-md-6">
                <!-- /.form-group -->
                <div class="form-group">
                    <label>Email</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <!-- /.form-group -->
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <!-- /.form-group -->
                <div class="form-group">
                    <label>Account Owner</label>
                    @Html.CheckBoxFor(model => model.IsAccountOwner, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IsAccountOwner, "", new { @class = "text-danger" })
                </div>
                <!-- /.form-group -->
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-md-6">
                <!-- /.form-group -->
                <div class="form-group">
                    <label>Role</label>
                    @foreach (var item in Model.RolesList)
                    {
                        <div class="checkbox">
                            <label>
                                @if (item.Selected)
                                {
                                    <input type="checkbox" name="SelectedRoles" checked="checked" value="@item.Value" /> @item.Text
                                }
                                else
                                {
                                    <input type="checkbox" name="SelectedRoles" value="@item.Value" /> @item.Text
                                }
                            </label>
                        </div>
                    }
                </div>
                <!-- /.form-group -->
            </div>
        </div>



    </div>
    <!-- /.box-body -->
</div>

}